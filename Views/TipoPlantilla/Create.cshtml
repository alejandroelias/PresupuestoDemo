@model TipoPlantillaModel

@{
    ViewData["Title"] = "Crear Tipo de Plantilla";
}


<h1>Crear tipo de plantilla</h1>

@*
    Hay dos tipos de validaciones:
    1. Errores de campo
    2. Errores de modelo
*@

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TipoPlantilla" asp-action="Create">
    <div class="mb-3">
        <label asp-for="TipoPlantilla"
               class="col-form-label">
        </label>
        <input type="text"
               asp-for="TipoPlantilla"
               class="form-control" />
        <span asp-validation-for="TipoPlantilla" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EsActiva"
               class="col-form-label">
        </label>
        <input type="text"
               asp-for="EsActiva"
               class="form-control" />
        <span asp-validation-for="EsActiva" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Codigo"
               class="col-form-label">
        </label>
        <input type="text"
               asp-for="Codigo"
               class="form-control" />
        <span asp-validation-for="Codigo" class="text-danger"></span>
    </div>

    <button type="submit"
            class="btn btn-primary">
        Enviar
    </button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}